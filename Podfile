platform :ios, '12.0'
use_frameworks!

target 'houska (iOS)' do
  
    # Payment
    pod 'Adyen'
    pod 'AdyenNetworking'
    pod 'Adyen3DS2'
    pod 'Twisto'

    # UI
    # pod 'AutoLayout', git: 'git@github.com:da0ke/AutoLayout.git'
    pod 'AutoLayoutSwift'
    pod 'BonMot'
    pod 'Differentiator'
    pod 'MaterialComponents'
    pod 'FlexLayout'
    pod 'FloatingPanel'
    pod 'MDFInternationalization'
    pod 'PhoneNumberKit'
    pod 'PinLayout'

    # Facebook
    pod 'FBSDKCoreKit'
    pod 'FBSDKLoginKit'

    # Google
    pod 'FirebaseABTesting'
    pod 'FirebaseCore'
    pod 'FirebaseCoreDiagnostics'
    pod 'FirebaseCrashlytics'
    pod 'FirebaseDatabase'
    pod 'FirebaseInstallations'
    pod 'FirebaseRemoteConfig'
    pod 'GoogleDataTransport'
    pod 'GoogleUtilities'

    # Data Management
    pod 'GRDB.swift' # duplicate image loading functionality with SQLiteStore
    pod 'Owl' # duplicate KVS functionality with leveldb
    pod 'leveldb' # duplicate KVS functionality with Owl
    
    # Image Loading and Caching
    pod 'Kingfisher' # duplicate image loading functionality with Nuke
    pod 'Nuke' # duplicate image loading functionality with Kingfisher

    # Syntactic Sugar
    pod 'PromisesSwift'
    pod 'RxCocoa'
    pod 'RxDataSources'
    pod 'RxRelay'
    pod 'RxSwift'
    pod 'Swinject'
    pod 'SwinjectAutoregistration'

    # Helpers
    #pod 'GzipSwift' returns -> [!] The 'Pods-houska (iOS)' target has frameworks with conflicting names: gzip.
    pod 'GZIP'
    pod 'youtube-ios-player-helper', '~> 1.0'
    pod 'nanopb'
    pod 'KeychainAccess'
    
    # Analytics
    pod 'SailthruMobile'
    pod 'SailthruMobile-Extension'

    # Debugging
    pod 'SwiftyBeaver'
  
end